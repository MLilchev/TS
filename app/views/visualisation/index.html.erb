



<div id="container2" style="width:100%; height:400px;"></div>
<script>
Highcharts.chart('container2', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Tornado occurences per state (Jan - May 2018)'
    },
    subtitle: {
        text: 'Source: National Centers For Environmental Information - NOAA'
    },
    xAxis: {
        categories: <%=raw @states %>
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Tornados (amount)'
        }
    },
    tooltip: {
        headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
        pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
            '<td style="padding:0"><b>{point.y:1f} </b></td></tr>',
        footerFormat: '</table>',
        shared: true,
        useHTML: true
    },
    plotOptions: {
        column: {
            pointPadding: 0.2,
            borderWidth: 0
        }
    },
    series: [{
        name: 'Tornados',
        data: <%=raw @tamount %>
    }]
});
</script>
<br><br>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<script>
Highcharts.chart('container', {
    chart: {
        type: 'line'
    },
    title: {
        text: 'Average tornado size per month'
    },
    subtitle: {
        text: 'Source: National Centers For Environmental Information - NOAA'
    },
    xAxis: {
        categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May']
    },
    yAxis: {
        title: {
            text: 'Width (feet) / Length (yards)'
        }
    },
    plotOptions: {
        line: {
            dataLabels: {
                enabled: true
            },
            enableMouseTracking: false
        }
    },
    series: [{
        name: 'Width',
        data: <%= raw @avg_width %>
    }, {
        name: 'Length',
        data: <%= raw @avg_length_rounded %>

    }]
});
</script>

